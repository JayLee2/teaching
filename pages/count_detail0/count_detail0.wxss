/* pages/count_detail0/count_detail0.wxss */
.head{
  border-bottom: 7rpx solid #e0e0e0;
  padding: 20rpx 30rpx;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  margin-left: 170rpx;
  overflow: hidden;
}
.row1{
  height: 60rpx;
  margin-top: 15rpx;
}
.row2_center{
  width: 260rpx;
  display: flex;
  justify-content: space-around;
  margin-top:30rpx;
}
.couse,.count{
  border-radius: 6rpx;
  width: 108rpx;
  height: 24rpx;
  font-size: 16rpx;
  border: 1rpx solid #9fd4d2;
  color: #9fd4d2;
  text-align: center;
  line-height: 24rpx;
}
.count{
    border: 1rpx solid #ccc;
    width: 120rpx;
    color: #ccc;
}
.head_top{
  border-bottom: 1rpx solid #dfdfdf;
  color: #333;
  font-size: 22rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 30rpx;
}
.ctitle{
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  color: #333;
}
.couse_detail:nth-child(odd){
  background: #e0e0e0;
}
.couse_detail{
  height: 77rpx;
  padding: 0 40rpx;
}
.detail_time{
  color: #7c7c7c;
  line-height: 20rpx
}
.detail_name{
  font-size: 24rpx;
  line-height: 48rpx;
}
.detail_count{
  font-size: 20rpx;
  line-height: 77rpx;
}
.flex_bottom{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ccc;
  font-size: 29rpx;
}
.flex_bottom view{
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  height:100rpx;
  background: #9fd4d2;
  color: #fff;
}
.flex_bottom view:first-of-type{
  background: #fff;
  color: #333;
}
/*弹出框*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  background: #f9f9f9;
  padding: 15rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #dbdbdb;
  padding-bottom: 10rpx;
  color: #030303;
}



.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  height: 60rpx;
  border-top: 1px solid #dedede;
  font-size: 24rpx;
  line-height: 60rpx;
  margin-top: 200rpx;
}

.btn-cancel {
  width: 40%;
  color: #000;
  background: #fff;
  text-align: center;
  border:1rpx solid #ccc;
  border-radius:14rpx;
}

.btn-confirm {
  border-radius: 14rpx;
  width: 40%;
  color: #fff;
  background: #9fd4d2;
  text-align: center;
}
.modal-content{
  padding:20rpx 15rpx;
}
.package{
  padding: 10rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  font-size: 24rpx;
  margin-top: 20rpx;
  width: 230rpx;
  border-radius: 10rpx;
  color: #333;
}
.package_select{
  color: #9fd4d2;
  border-color: #9fd4d2;
}
.modal-price{
  margin-top: 90rpx;
  padding:0 15rpx 10rpx;
}
.count{
  text-indent: 10rpx;
}
.detail_list{
  width: 90%;
  line-height: 50rpx;
}
.couse_count{
  display: inline-block;
  border: 1rpx solid #ccc;
  width: 62rpx;
  height: 33rpx;
  vertical-align: middle;
  margin: 0 10rpx;
  font-size: 24rpx;
  padding-left:6rpx;
  box-sizing: border-box; 
}
.count_box{
  width: 130rpx;
  text-align: center;
}
textarea{
  border: 1rpx solid #ccc;
  width: 283rpx;
  height: 118rpx;
  padding: 15rpx;  
}
.ret_all{
  display: inline-block;
  width: 51rpx;
  height: 21rpx;
  text-align: center;
  line-height: 21rpx;
  color: #9fd4d2;
  border: 1rpx solid #9fd4d2;
  border-radius: 8rpx;
  font-size: 18rpx;
  transform: translate(10rpx,-6rpx);
}