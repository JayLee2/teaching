/* pages/teacher_detail/teacher_detail.wxss */
.head{
  border-bottom: 7rpx solid #e0e0e0;
  padding: 20rpx 30rpx;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  margin-left: 170rpx;
  overflow: hidden;
}
.row1{
  height: 60rpx;
  margin-top: 15rpx;
}
.row2_center{
  width: 260rpx;
  display: flex;
  justify-content: space-around;
  margin:30rpx auto
}
.authen_student,.authen_teacher{
  border-radius: 6rpx;
  width: 108rpx;
  height: 24rpx;
  font-size: 16rpx;
  border: 1rpx solid #9fd4d2;
  color: #9fd4d2;
  text-align: center;
  line-height: 24rpx;
}
.authen_student{
    border: 1rpx solid #ccc;
    color: #ccc;
}
.head_bottom{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 20rpx;
  margin-top: 15rpx;
}
.every{
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  width: 700rpx;
  margin: auto;
  font-size: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.every .every_title{
  font-size: 33rpx;
  margin-top: 0;
}
.every view{
  margin-top: 25rpx;
}
.bottom{
  height: 99rpx;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 99rpx;
}
.bottom view{
  width: 25%;
  background: #fff;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}
.bottom .buy{
  width: 50%;
  background: #9fd4d2;
  color: #fff;
  text-align: center;
}
.share{
  border-right: 1rpx solid #ccc;
}
.last {
  border: none;
}
/*弹出框*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  background: #f9f9f9;
  padding: 15rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #dbdbdb;
  padding-bottom: 10rpx;
  color: #030303;
}



.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  height: 60rpx;
  border-top: 1px solid #dedede;
  font-size: 24rpx;
  line-height: 60rpx;
}

.btn-cancel {
  width: 40%;
  color: #000;
  background: #fff;
  text-align: center;
  border:1rpx solid #ccc;
  border-radius:14rpx;
}

.btn-confirm {
  border-radius: 14rpx;
  width: 40%;
  color: #fff;
  background: #9fd4d2;
  text-align: center;
}
.modal-content{
  padding:20rpx 15rpx;
}
.package{
  padding: 10rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  font-size: 24rpx;
  margin-top: 20rpx;
  width: 230rpx;
  border-radius: 10rpx;
  color: #333;
}
.package_select{
  color: #9fd4d2;
  border-color: #9fd4d2;
}
.modal-price{
  margin-top: 90rpx;
  padding:0 15rpx 10rpx;
}
.count{
  text-indent: 10rpx;
}