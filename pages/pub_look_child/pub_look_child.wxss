/* pages/pub_look_child/pub_look_child.wxss */
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  margin-left: 170rpx;
  overflow: hidden;
}
.row1{
  height: 60rpx;
  margin-top: 15rpx;
}
.row2_center{
  width: 260rpx;
  display: flex;
  justify-content: space-around;
  margin-top:30rpx;
}
.authen_student,.authen_teacher{
  border-radius: 6rpx;
  width: 108rpx;
  height: 24rpx;
  font-size: 16rpx;
  border: 1rpx solid #9fd4d2;
  color: #9fd4d2;
  text-align: center;
  line-height: 24rpx;
}
.authen_student{
    border: 1rpx solid #ccc;
    color: #ccc;
}
.head_bottom{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 20rpx;
  margin-top: 15rpx;
}
.every{
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  width: 700rpx;
  margin: auto;
  font-size: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.every .every_title{
  font-size: 33rpx;
  margin-top: 0;
}
.every view{
  margin-top: 25rpx;
}
.bottom{
  height: 99rpx;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 99rpx;
}
.bottom view{
  width: 50%;
  background: #9fd4d2;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.bottom view:first-of-type{
  color: #333;
  background: #fff;
}