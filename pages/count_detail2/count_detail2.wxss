.head{
  border-bottom: 7rpx solid #e0e0e0;
  padding: 20rpx 30rpx;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  margin-left: 170rpx;
  overflow: hidden;
}
.row1{
  height: 60rpx;
  margin-top: 15rpx;
}
.row2_center{
  width: 260rpx;
  display: flex;
  justify-content: space-around;
  margin-top:30rpx;
}
.couse,.count{
  border-radius: 6rpx;
  width: 108rpx;
  height: 24rpx;
  font-size: 16rpx;
  border: 1rpx solid #9fd4d2;
  color: #9fd4d2;
  text-align: center;
  line-height: 24rpx;
}
.count{
    border: 1rpx solid #ccc;
    width: 120rpx;
    color: #ccc;
}
.head_top{
  border-bottom: 1rpx solid #dfdfdf;
  color: #333;
  font-size: 22rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 30rpx;
}
.ctitle{
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  color: #333;
}
.couse_detail:nth-child(odd){
  background: #e0e0e0;
}
.couse_detail{
  height: 77rpx;
  padding: 0 40rpx;
}
.detail_time{
  color: #7c7c7c;
  line-height: 20rpx
}
.detail_name{
  font-size: 24rpx;
  line-height: 48rpx;
}
.detail_count{
  font-size: 20rpx;
  line-height: 77rpx;
}
.flex_bottom{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ccc;
  font-size: 29rpx;
}
.flex_bottom view{
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  height:100rpx;
  background: #9fd4d2;
  color: #fff;
}
