/* pages/my_publish/my_publish.wxss */
page{
  padding-bottom: 100rpx;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;  
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.list_top{
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 10rpx;
  margin-bottom: 10rpx;
}
.teacher_list{
  padding: 0 15rpx 20rpx;
  border-bottom: 7rpx solid #ccc;
}
.special{
  border: 1px solid #7ec6c3;
  padding:0 5rpx;
  margin-left: 20rpx;
  color: #7ec6c3;
}
.wx-switch-input{width:42px !important;height:20px !important;}
.wx-switch-input::before{width:41px !important;height: 20px !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;}
.application{
  width: 132rpx;
  height: 52rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #7ec6c3;
  border: 1rpx solid #7ec6c3;
}
.couse_box{
  width: 73rpx;
  height: 24rpx;
  border: 1rpx solid #7ec6c3;
  border-radius: 6rpx;
  text-align: center;
  line-height: 24rpx;
  font-size: 18rpx;
  color: #7ec6c3;
}
.couse_info{
  width: 380rpx;
}
.bottom{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  background: #7ec6c3;
  font-size:30rpx;
}