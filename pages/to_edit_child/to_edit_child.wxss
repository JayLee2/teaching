/* pages/to_edit/to_edit.wxss */
page{
  padding-bottom: 100rpx;
}
.every{
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  width: 700rpx;
  margin: auto;
  font-size: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.every .every_title{
  font-size: 33rpx;
  margin-top: 0;
}
.every view{
  margin-top: 25rpx;
}
.bottom{
  height: 99rpx;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 99rpx;
  text-align: center;
  color: #fff;
  background: #9fd4d2;
}

input{
  border: 1rpx solid #ccc;
  display: inline-block;
  vertical-align: middle;
  width: 392rpx;
  height: 33rpx;
  padding-left: 10rpx;
}
textarea{
  border: 1rpx solid #ccc;
  display: inline-block;
  width: 392rpx;
  vertical-align: top;
  height: 90rpx;
  padding: 10rpx 0 10rpx 10rpx;
}
checkbox .wx-checkbox-input{
  width: 30rpx;
  height: 30rpx;
}
label{
  margin-right: 20rpx;
}
