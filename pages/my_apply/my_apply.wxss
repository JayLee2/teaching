/* pages/my_apply/my_apply.wxss */
.teacher_list:first-of-type{
  border-top: 1rpx solid #ccc;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;  
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.list_top{
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 10rpx;
  margin-bottom: 10rpx;
}
.teacher_list{
  position: relative;
  padding:20rpx;
  border-bottom: 7rpx solid #ccc;
}
.special{
  border: 1px solid #7ec6c3;
  padding:0 5rpx;
  margin-left: 20rpx;
  color: #7ec6c3;
}
.authen{
  padding: 5rpx 15rpx;
  border: 1rpx solid #7ec6c3;
  color: #7ec6c3;
  font-size: 16rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.transpant{
  opacity: 0.6
}
.black_box{
  width: 253rpx;
  height: 94rpx;
  border-radius: 8rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  line-height: 94rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
}
.rad{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #7ec6c3;
  display: inline-block;
}
/*弹出框*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  background: #f9f9f9;
  padding: 15rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #dbdbdb;
  padding-bottom: 10rpx;
  color: #030303;
}



.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  height: 60rpx;
  border-top: 1px solid #dedede;
  font-size: 24rpx;
  line-height: 60rpx;
}

.btn-cancel {
  width: 40%;
  color: #000;
  background: #fff;
  text-align: center;
  border:1rpx solid #ccc;
  border-radius:14rpx;
}

.btn-confirm {
  border-radius: 14rpx;
  width: 40%;
  color: #fff;
  background: #9fd4d2;
  text-align: center;
}
.modal-content{
  padding:20rpx 15rpx;
}
.package{
  padding: 10rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  font-size: 24rpx;
  margin-top: 20rpx;
  width: 230rpx;
  border-radius: 10rpx;
  color: #333;
}
.package_select{
  color: #9fd4d2;
  border-color: #9fd4d2;
}
.modal-price{
  margin-top: 90rpx;
  padding:0 15rpx 10rpx;
}
.count{
  text-indent: 10rpx;
}